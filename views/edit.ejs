<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= title%></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container">
      <div class="row mt-5">
        <!-- heading -->
        <div class="col-lg-6 col-md-6 pt-3">
          <h3>Edit Patient</h3>
        </div>

        <div class="col-lg-6 col-md-6 text-end pt-3">
          <a href="/" class="btn btn-primary btn-sm">Back</a>
        </div>
      </div>

      <div class="row">
        <!-- add data form -->
        <div class="col-lg-12 col-md-12">
          <form action="/edit/<%=id%>" method="post" name="form1">
            <div class="row">
              <div class="col-lg-12">
                <div class="form-group mt-3">
                  <strong>Nom</strong>
                  <input
                    type="text"
                    name="nom"
                    id="nom"
                    value="<%= patient.nom %>"
                    class="form-control"
                    placeholder="Entrer nom"
                  />
                </div>
              </div>
              <div class="col-lg-12">
                <div class="form-group mt-3">
                  <strong>Prenom</strong>
                  <input
                    type="text"
                    name="prenom"
                    value="<%= patient.prenom %>"
                    class="form-control"
                    placeholder="Entrer prenom"
                  />
                </div>
              </div>
              <div class="col-lg-12">
                <div class="form-group mt-3">
                  <strong>genre</strong>

                  <select
                    class="form-select"
                    name="sexe"
                    aria-label="Default select example"
                  >
                    <option value="homme"  <% if("homme" == patient.sexe){%>  selected <%}%> >Homme</option>
                    <option value="femme"  <% if("femme" == patient.sexe)  {%>  selected <%}%> > Femme</option>
                  </select>
                </div>
              </div>
              <div class="col-lg-12">
                <div class="form-group mt-3">
                  <strong>age</strong>
                  <input
                    type="number"
                    name="age"
                    value="<%= patient.age%>"
                    class="form-control"
                    placeholder="Entrer age"
                  />
                </div>
              </div>
              <div class="col-lg-12">
                <div class="form-group mt-3">
                  <input
                    type="submit"
                    name="Submit"
                    value="Submit"
                    class="btn btn-success btn-sm"
                  />
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
